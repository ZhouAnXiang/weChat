.score {
    background-color: #fff;
    padding: 0.5rem;
    display: flex;
}
.score input{
  height: 1.5rem;
}
.score .search_input{
    flex: 4;
    border: 0.025rem solid #e4e4e4;
    border-radius: 0.125rem;
    background-color: #f2f2f2;
    font-weight: bold;
    padding: 0 0.25rem;
}
.search_submit{
    flex: 1;
    border: 0.025rem solid #3190e8;
    margin-left: .2rem;
    border-radius: 0.125rem;
    background-color: #3190e8;
    font-weight: bold;
    padding: 0 0.25rem;
    text-align: center;
    color: #fff;
}
    